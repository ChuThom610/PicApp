<p id="notice"><%= notice %></p>
<h1 style="margin-bottom: 30px; text-align: center;">User Profile</h1>
<div class="row">
  <div class="col-md-3" style="border: 1px solid; border-radius: 5px; padding: 15px 15px">
	  <p><b>User name: </b><%= @user.user_name %></p>
	  <p><b>Email: </b><%= @user.email %></p>
	  <p>
	    <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-outline-warning" %> 
	    <%= link_to 'Back', pics_path, class: "btn btn-outline-info" %>
	  </p>
  </div>
  <div class="col-md-9">
    <table class="table table-bordered table-striped table-responsive">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>#</th>
        </tr>
      </thead>

      <tbody>
        <% @albums.each do |album| %>
          <tr>
            <td><%= album.name %></td>
            <td><%= album.description %></td>
            <td>
              <%= link_to 'Show', album, class: "btn btn-outline-info" %>
              <% if current_user.admin? || (album.user_id == current_user.id) %>
                <%= link_to 'Edit', edit_album_path(album), class: "btn btn-outline-warning" %> 
                <%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>

    <%= link_to 'New Album', new_album_path, class: "btn btn-outline-success" %>
  </div>
</div>