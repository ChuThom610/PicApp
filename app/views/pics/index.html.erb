<% @pics.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |pic| %>
      <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">  
        <div class="hovereffect">               
          <% if pic.picture? %>
            <img src="<%= pic.picture_url(:thumb)%>" class="img rounded img-fluid" alt="<%= pic.name %>">
            <div class="overlay">
              <% if pic.name.present? %>
                <h2><%= pic.name %></h2>
              <% else %>
                <% @album = Album.find_by_id pic.album_id %>
                <h2><%= @album.name %></h2>
              <% end %>
                <p><a class="info" href="<%= pic_path(pic.id) %>">XEM áº¢NH</a></p>
            </div>
          <% end %>  
        </div>
      </div>
    <% end %>
  </div><br>
  <div class="row"></div>
<% end %>
